{
  "endpoints": {
    "GET /api": {
      "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
      "description": "serves an array of all topics",
      "queries": [],
      "exampleResponse": {
        "topics": [{ "slug": "football", "description": "Footie!" }]
      }
    },
    "GET /api/users": {
      "description": "serves an array of all users",
      "queries": [],
      "exampleResponse": {
        "users": [
          {
            "username": "user1",
            "name": "anon",
            "avatar_url": "https://...etc"
          }
        ]
      }
    },
    "GET /api/articles": {
      "description": "serves an array of all articles",
      "queries": ["topic", "sort_by", "order"],
      "exampleResponse": {
        "articles": [
          {
            "title": "Seafood substitutions are increasing",
            "topic": "cooking",
            "author": "weegembump",
            "body": "Text from the article..",
            "created_at": 1527695953341
          }
        ]
      }
    },
    "GET /api/articles/:article_id": {
      "description": "serves a single article by article id",
      "queries": [],
      "exampleResponse": {
        "article": {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100
        }
      }
    },
    "PATCH /api/articles/:article_id": {
      "description": "updates a single article by article id",
      "queries": [],
      "exampleRequest": { "inc_votes": 1 },
      "exampleResponse": {
        "article": {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 101
        }
      }
    },
    "GET /api/articles/:article_id/comments": {
      "description": "Serves an array of comments by article id",
      "queries": [],
      "exampleResponse": {
        "comments": [
          {
            "comment_id": 1,
            "body": "Lobster pot",
            "votes": 0,
            "author": "icellusedkars",
            "article_id": 1,
            "created_at": 1589577540000
          }
        ]
      }
    },
    "POST /api/articles/:article_id/comments": {
      "description": "Comments can be posted and associated with an article by id",
      "queries": [],
      "exampleRequest": {
        "username": "lurker",
        "body": "What is this internet?"
      },
      "exampleResponse": {
        "createdComment": {
          "author": "lurker",
          "body": "What is this internet?",
          "article_id": 2,
          "comment_id": 19,
          "votes": 0,
          "created_at": "2020-07-09T20:11:00.000Z"
        }
      }
    },
    "DELETE /api/comments/:comment_id": {
      "description": "Deletes a comment by comment id",
      "queries": []
    }
  }
}
